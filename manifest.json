{
  "name": "OKU",
  "short_name": "OKU",
  "description": "e-Okul Hızlı Ders Notu Girişi",
  "version": "1.2.0",
  "manifest_version": 2,
  "icons": {
    "128": "img/OKU128.png"
  },
  "permissions": [
    "https://eokul.meb.gov.tr/IlkOgretim/OKL/*",
    "https://e-okul.meb.gov.tr/IlkOgretim/OKL/*",
    "https://eokul.meb.gov.tr/OrtaOgretim/OKL/*",
    "https://e-okul.meb.gov.tr/OrtaOgretim/OKL/*",
    "tabs",
    "downloads",
    "activeTab",
    "notifications"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "commands": {
    "tanitim": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X",
        "windows": "Ctrl+Shift+X",
        "chromeos": "Ctrl+Shift+X",
        "linux": "Ctrl+Shift+X"
      },
      "description": "Tanıtım"
    },
    "yardim": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y",
        "windows": "Ctrl+Shift+Y",
        "chromeos": "Ctrl+Shift+Y",
        "linux": "Ctrl+Shift+Y"
      },
      "description": "Yardım"
    },
    "indir": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A",
        "windows": "Ctrl+Shift+A",
        "chromeos": "Ctrl+Shift+A",
        "linux": "Ctrl+Shift+A"
      },
      "description": "İndir"
    },
    "oku": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S",
        "windows": "Ctrl+Shift+S",
        "chromeos": "Ctrl+Shift+S",
        "linux": "Ctrl+Shift+S"
      },
      "description": "Oku"
    }
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://eokul.meb.gov.tr/IlkOgretim/OKL/*",
        "https://e-okul.meb.gov.tr/IlkOgretim/OKL/*",
        "https://eokul.meb.gov.tr/OrtaOgretim/OKL/*",
        "https://e-okul.meb.gov.tr/OrtaOgretim/OKL/*"
      ],
      "css": [
        "css/content.css"
      ],
      "js": [
        "js/content.js",
        "js/jquery-3.3.0.js",
        "js/jszip.js",
        "js/FileSaver.js",
        "js/myexcel.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_icon": "img/OKU128.png"
  },
  "file_browser_handlers": [
    {
      "id": "upload",
      "default_title": "OKU",
      "file_filters": [
        "filesystem:*.xlsx"
      ]
    }
  ],
  "web_accessible_resources": [
    "doc/*.pdf"
  ]
}
