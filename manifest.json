{
  "name": "OKU",
  "short_name": "OKU",
  "description": "e-Okul Sesli Ders Notu Girişi",
  "version": "4.1.0",
  "manifest_version": 3,
  "icons": {
    "128": "img/OKU128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "downloads",
    "activeTab",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "https://eokul.meb.gov.tr/IlkOgretim/OKL/*",
    "https://e-okul.meb.gov.tr/IlkOgretim/OKL/*",
    "https://eokulyd.meb.gov.tr/IlkOgretim/OKL/*",
    "https://eokul.meb.gov.tr/OrtaOgretim/OKL/*",
    "https://e-okul.meb.gov.tr/OrtaOgretim/OKL/*",
    "https://eokulyd.meb.gov.tr/OrtaOgretim/OKL/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "commands": {
    "tanitim": {
      "suggested_key": {
        "default": "Alt+T",
        "mac": "Alt+T",
        "windows": "Alt+T",
        "chromeos": "Alt+T",
        "linux": "Alt+T"
      },
      "description": "Tanıtım"
    },
    "yardim": {
      "suggested_key": {
        "default": "Alt+Y",
        "mac": "Alt+Y",
        "windows": "Alt+Y",
        "chromeos": "Alt+Y",
        "linux": "Alt+Y"
      },
      "description": "Yardım"
    },
    "oku": {
      "suggested_key": {
        "default": "Alt+O",
        "mac": "Alt+O",
        "windows": "Alt+O",
        "chromeos": "Alt+O",
        "linux": "Alt+O"
      },
      "description": "Oku"
    },
    "kontrol": {
      "suggested_key": {
        "default": "Alt+K",
        "mac": "Alt+K",
        "windows": "Alt+K",
        "chromeos": "Alt+K",
        "linux": "Alt+K"
      },
      "description": "Kontrol"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://eokul.meb.gov.tr/IlkOgretim/OKL/*",
        "https://e-okul.meb.gov.tr/IlkOgretim/OKL/*",
        "https://eokulyd.meb.gov.tr/IlkOgretim/OKL/*",
        "https://eokul.meb.gov.tr/OrtaOgretim/OKL/*",
        "https://e-okul.meb.gov.tr/OrtaOgretim/OKL/*",
        "https://eokulyd.meb.gov.tr/OrtaOgretim/OKL/*"
      ],
      "css": [
        "css/content.css",
        "css/font-awesome-pro-fab-base64.css",
        "css/social-share.css",
        "css/dimmer.css"
      ],
      "js": [
        "js/jquery-3.3.0.js",
        "js/jszip.js",
        "js/FileSaver.js",
        "js/myexcel.js",
        "js/dimmer.js",
        "js/extension.js",
        "js/storage.js",
        "js/normalize.js",
        "js/aspx.js",
        "js/enum.js",
        "js/animation.js",
        "js/sound.js",
        "js/speech.js",
        "js/auxiliary.js",
        "js/content.js",
        "js/gtag-core.js",
        "js/gtag-init.js"
      ]
    }
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": "img/OKU128.png"
  },
  "file_browser_handlers": [
    {
      "id": "upload",
      "default_title": "YÜKLE",
      "file_filters": [
        "filesystem:*.xlsx"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "img/OKU16.png",
        "img/OKU32.png",
        "img/OKU48.png",
        "img/OKU128.png",
        "doc/*.pdf",
        "aud/*.mp3",
        "aud/text/*.mp3",
        "aud/number/*.mp3"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
